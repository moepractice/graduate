<img class ="mypage" src="/assets/kakaeru.jpg" >

<h3 class ="mypage">Welcome!<%= @user.name %></h3>
<%= link_to 'ブログ一覧画面へ', blogs_path %>
<%= link_to '投稿する', new_blog_path %>

<div class="wrapper">
  <div class="column">
    <div class="info" id="user">
      <div class ="mypage">
        <% if @user.image? %>
　　      <%= image_tag @user.image.thumb.url %>
　      <% else %>
　　      <%= image_tag 'no_image.png' %>
　      <% end %><%= @user.name %>
　　　  <p class ="mypage">名前: <%= @user.name %><br>メールアドレス: <%= @user.email %>
　　　  </p>
　　　</div>
　　</div>
  </div>

  <div class="column">
    <div class="info" id="favorite">
      <div class ="mypage">
        <% if @favorites.present? %>
          <% @favorites.each do |favorite| %>
            <div class="favorite_user">
              <% blog = favorite.blog %>
              <% if blog.user.image? %>
                <%= image_tag blog.user.image.thumb.url %>
              <% else %>
                <%= image_tag 'no_image.png' %>
              <% end %>
              <%= blog.user.name %>
            </div>
　          <br>
            <p class ="mypage">タイトル：<%= blog.title %>
              <br>
              内容：<%= blog.content %>
              <br>
              <%= blog.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
            </p>
          <% end %>
        <% end %>
　    </div>
    </div>
  </div>
</div>

