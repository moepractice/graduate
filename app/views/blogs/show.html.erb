<h1>ブログ詳細画面</h1>
<p>タイトル: <%= @blog.title %></p>
<p>内容: <%= @blog.content %></p>

<h2>コメントを追加</h2>
<%= form_for( [@blog, @blog.comments.build] ) do |f| %>

  <div class="comment_title">
    <%= f.text_field :content %>
  </div>
    <%= f.submit %>
<% end %>

<p><%= notice %></p>
  <% if @blog.user_id == current_user.id %>
    <%= link_to 'Edit', edit_blog_path(@blog)%>
    <%= link_to 'Delete', blog_path(@blog), method: :delete, data: { confirm: '本当に削除していいですか？' } %>
  　<%= link_to 'Comment', new_blog_comment_path(@blog) %>
  <% else %>
    <% if @favorite.present? %>
      <%= link_to 'Unliked', favorite_path(blog_id: @blog.id), method: :delete %>
    <% else %>
      <%= link_to 'わかる', favorites_path(blog_id: @blog.id), method: :post %>
    <% end %>
  <% end %>
<br>
<%= link_to 'ブログ一覧画面にもどる', blogs_path %>
