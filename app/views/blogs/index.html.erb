<div class ="content cleafix">
  <section class="main-header"></section>
    <br><%= link_to new_blog_path, target: "_blank" do %>
      投稿する<%= image_tag "create.png" %>
    <% end %>

  <div class="container">
    <% @blogs.each do |blog| %>
      <div class="PhotoBox" class="col-sm-6 col-md-3">
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <div class="caption">
              <% if blog.user.image? %>
                <%= image_tag blog.user.image.thumb.url %>
              <% else %>
                <%= image_tag 'no_image.png' %>
              <% end %><%= blog.user.name %></h4>
              <h4 class="blog_content">タイトル</h4>
              <p class="blog_content"><%= blog.title %></p>
              <h4 class="blog_content">今日のつぶやき</h4>
              <p class="blog_content"><%= blog.content %></p>
              <p><%= blog.created_at %></p><br>
                <% unless blog.user_id != current_user.id %>
                  <%= link_to blog_path(blog.id), target: "_blank" do %>
                    <%= image_tag "touch.png" %>
                  <% end %>
                  <%= link_to edit_blog_path(blog.id) ,target: "_blank" do  %>
                    <%= image_tag "edit.png" %>
                  <% end %>
                  <%= link_to blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, target: "_blank" do  %>
                    <%= image_tag "delete.png" %>
                  <% end %>
                <% else %>
                  <%= link_to blog_path(blog.id), target: "_blank" do %>
                    <%= image_tag "touch.png" %>
                  <% end %>
                  <% if @favorite.present? %>
                    <%= link_to favorite_path(blog_id: @blog.id), method: :delete, target: "_blank" do  %>
                      <%= image_tag "unlike.png" %><% end %>
                  <% else %>
                    <%= link_to  favorites_path(blog_id: blog.id), method: :post, target: "_blank" do %>
                      <%= image_tag "heart.png" %><% end %>
                    <% end %>
                <% end %>
          　</div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
